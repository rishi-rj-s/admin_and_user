<%- include('include/_lheader') -%>
        <button type="button" class="btn btn-warning border-shadow">
            <a href="/register" class="link1">
                  <span class="text-gradient">&nbsp; Register &nbsp; </span>
            </a>
        </button>

     <div class="container">
          <form class="mx-auto" action="/api/users/login" method="post" id="_login" >
            <h1 class="text-center">Login Page</h1>
                <div class="mb-3 mt-5">
                 <label for="email" class="form-label">Email</label>
                 <input type="email" class="form-control" name="email" required>
                 
               </div>
               <div class="mb-3">
                 <label for="password" class="form-label">Password</label>
                 <input type="password" class="form-control" name="password" required>
                 <%if(locals.shE==false){%>
                  <div id="emailHelp" class="form-text text-danger mt-3">Wrong username or password</div>
                  <%}%>
                </div>
               <button type="submit" class="btn btn-primary mt-4">Login</button>
             </form>
     </div>

     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
     
</body>
</html>