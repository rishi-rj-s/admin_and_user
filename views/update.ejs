<!-- include header -->
<%- include('include/_aheader') %>
     <main id='site-main'>
          <div class="container">
               <div class="box-nav d-flex-justify-between">
                    <button type="button" class="btn btn-info">
                         <a href="/home" class="border-shadow">
                              <span class="text-gradient"><i class="fas fa-angle-double-left"></i>&nbsp;All Users &nbsp;
                              </span>
                         </a>
                    </button>
               </div>
               <div class="form-title text-center">
                    <h2 class="display-2">Update user</h2>
                    <span class="text-light">Use the form below to update the current user</span>
               </div>
               <br><br>
               <!-- form will be connected to mongodb-->
               <!-- form handling -->
<form class="form-block row" id="update_user">
     <div class="container">
          <div class="form-group col">
               <label for="name" class="text-light">Name</label>
               <input type="hidden" name="id" value="<%= user._id%>">
               <input class="form-control" type="text" name="name" value="<%= user.name%>" placeholder="Enter name">
          </div>
          <div class="form-group col">
               <label for="Email" class="text-light">Email</label>
               <input class="form-control" type="text" name="email" value="<%= user.email%>" placeholder="example@gmail.com">
          </div>
          <div class="form-inline  gender">
               <label for="Gender" class="text-light">Gender</label>&emsp;
               <div class="radio inline">
                    <input class="form-check-input" type="radio" name="gender" value="Male"  <%= user.gender == "Male" ? 'checked' : '' %>>
                    <label for="Gender" class="text-light">Male</label>&emsp;
               </div>
               <div class="radio inline ">
                    <input class="form-check-input" type="radio" name="gender" value="Female"  <%= user.gender == "Female" ? 'checked' : '' %>>
                    <label for="Gender" class="text-light">Female</label>&emsp;
               </div>
               <div class="radio inline ">
                    <input class="form-check-input" type="radio" name="gender" value="Other"  <%= user.gender == "Other" ? 'checked' : '' %>>
                    <label for="Gender" class="text-light">Other</label>
               </div>
          </div>
          <br>
          <div class="form-group text-center">
               <button type="submit" class="btn text-dark btn-warning">Save</button>
          </div>
     </div>
</form>
          </div>
     </main>

     <!-- include footer -->
     <%- include('include/_footer')%>